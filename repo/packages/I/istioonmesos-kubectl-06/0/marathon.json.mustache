{
    "env": {
      "KUBECONFIG": "/mnt/mesos/sandbox/kubeconfig"
    },
    "id": "{{istioonmesos-kubectl.name}}",
    "backoffFactor": 1.15,
    "backoffSeconds": 1,
    "cmd": "export PATH=$PATH:$PWD && chmod +x kubectl; tail -F /dev/null",
    "container": {
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "type": "MESOS",
      "volumes": [],
      "docker": {
        "image": "{{resource.assets.container.docker.kubectl}}",
        "forcePullImage": false,
        "parameters": []
      }
    },
    "cpus": {{istioonmesos-kubectl.cpus}},
    "disk": 0,
    "fetch": [
      {
        "uri": "{{resource.assets.uris.kubeconfig}}",
        "extract": true,
        "executable": false,
        "cache": false
      },
      {
        "uri": "{{resource.assets.uris.kubectl}}",
        "extract": true,
        "executable": true,
        "cache": false
      }
    ],
    "instances": 1,
    "maxLaunchDelaySeconds": 3600,
    "mem": {{istioonmesos-kubectl.mem}},
    "gpus": 0,
    "networks": [
      {
        "mode": "container/bridge"
      }
    ],
    "requirePorts": false,
    "upgradeStrategy": {
      "maximumOverCapacity": 1,
      "minimumHealthCapacity": 1
    },
    "killSelection": "YOUNGEST_FIRST",
    "unreachableStrategy": {
      "inactiveAfterSeconds": 0,
      "expungeAfterSeconds": 0
    },
    "healthChecks": [],
    "constraints": []
}