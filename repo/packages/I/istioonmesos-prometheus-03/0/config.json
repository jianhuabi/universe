{
  "type": "object",
  "properties": {
    "istioonmesos-prometheus": {
      "type": "object",
      "description": "03-IstioOnMesos prometheus",
      "properties": {
        "name": {
          "description": "The name of the prometheus instance",
          "type": "string",
          "default": "/prometheus"
        },
        "cpus": {
          "description": "CPU shares to allocate to each prometheus instance.",
          "type": "number",
          "default": 0.5,
          "minimum": 0.3
        },
        "mem": {
          "description":  "Memory to allocate to each prometheus instance.",
          "type": "number",
          "default": 1024.0,
          "minimum": 512.0
        },
        "l_haproxy_group": {
          "description": "Haproxy Group Label.",
          "type": "string",
          "default": "external"
        }
      }
    }
  }
}
