{
    "id": "{{istioonmesos-citadel.name}}",
    "backoffFactor": 1.15,
    "backoffSeconds": 1,
    "cmd": "/usr/local/bin/istio_ca --citadel-storage-namespace=istio-system --grpc-port=8060 --grpc-host-identities=istio-standalone-citadel --self-signed-ca=true --self-signed-ca-org=zmcc-org --self-signed-ca-cert-ttl=24000h --sign-ca-certs=true --workload-cert-ttl=21h --kube-config=/mnt/mesos/sandbox/kubeconfig",
    "container": {
      "portMappings": [
        {
          "containerPort": 8060,
          "hostPort": 30806,
          "protocol": "tcp",
          "name": "grpc"
        }
      ],
      "type": "MESOS",
      "volumes": [],
      "docker": {
        "image": "{{resource.assets.container.docker.citadel}}",
        "forcePullImage": true,
        "parameters": []
      }
    },
    "cpus": {{istioonmesos-citadel.cpus}},
    "disk": 0,
    "fetch": [
      {
        "uri": "{{resource.assets.uris.kubeconfig}}",
        "extract": false,
        "executable": false,
        "cache": false
      }
    ],
    "instances": {{istioonmesos-citadel.instances}},
    "maxLaunchDelaySeconds": 3600,
    "mem": {{istioonmesos-citadel.mem}},
    "gpus": 0,
    "networks": [
      {
        "mode": "container/bridge"
      }
    ],
    "requirePorts": false,
    "upgradeStrategy": {
      "maximumOverCapacity": 1,
      "minimumHealthCapacity": 1
    },
    "killSelection": "YOUNGEST_FIRST",
    "unreachableStrategy": {
      "inactiveAfterSeconds": 0,
      "expungeAfterSeconds": 0
    },
    "healthChecks": [],
    "constraints": []
}